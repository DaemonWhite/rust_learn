using Gtk 4.0;

ApplicationWindow main_window {
    title: "Example App";
    default-width: 800;
    default-height: 600;

    Box {
        orientation: vertical;
        valign: center;
        halign: center;

        Label counter_label { }

        Button increment_button {
            label: "+";
        }
        Button decrement_button {
            label: "-";
        }

        Button reset_button {
            label: "Reset";
        }
    }
}